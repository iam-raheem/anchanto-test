<p id="notice"><%= notice %></p>

<h1>Ixams</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>No.of Questions Assigned</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ixams.each do |ixam| %>
      <tr>
        <td><%= ixam.name %></td>
        <td><%= ixam.questions.count %></td>
        <td><%= link_to 'Show', ixam %></td>
        <td><%= link_to 'Edit', edit_ixam_path(ixam) %></td>
        <td><%= link_to 'Destroy', ixam, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

